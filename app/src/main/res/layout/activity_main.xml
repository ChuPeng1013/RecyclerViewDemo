<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.recyclerview.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/linearLayoutVertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="竖直线性RecyclerView"/>

            <Button
                android:id="@+id/linearLayoutHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="水平线性RecyclerView"/>

            <Button
                android:id="@+id/gridLayoutVertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="竖直网格RecyclerView"/>

            <Button
                android:id="@+id/gridLayoutHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="水平网格RecyclerView"/>

            <Button
                android:id="@+id/staggeredGridLayoutVertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="竖直瀑布RecyclerView"/>

            <Button
                android:id="@+id/staggeredGridLayoutHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="水平瀑布RecyclerView"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
